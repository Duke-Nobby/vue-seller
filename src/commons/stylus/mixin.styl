/*实现在移动端中的1px的直线。*/
border-1px($color)
  position: relative
  &:after
    bottom: 0
    left: 0
    width: 100%
    position: absolute
    content: ''
    border-top: solid 1px $color
  &:before
    top: 0
    left: 0
    width: 100%
    position: absolute
    content: ''
    border-bottom: solid 1px $color

bg-image($url)
  background-image: url($url+'@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3.0),(min-device-pixel-ratio: 3.0)
    background-image:url($url+'@3x.png')




